<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/background_landscape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use headphones for the best experiences . . ."
        android:id="@+id/textView0"
        android:textColor="@color/gray"
        android:gravity="right"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>


    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/faceBookButton"
            android:textSize="25sp"
            android:background="@drawable/button_face_book"
            android:alpha="0.5"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/twitterButton"
            android:layout_toEndOf="@+id/twitterButton"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/googlePlus"
            android:textSize="25sp"
            android:background="@drawable/button_google_plus"
            android:alpha="0.5"
            android:textStyle="normal|bold"
            android:layout_alignTop="@+id/faceBookButton"
            android:layout_toRightOf="@+id/faceBookButton"
            android:layout_toEndOf="@+id/faceBookButton"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_twitter"
            android:alpha="0.5"
            android:id="@+id/twitterButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="@dimen/menu_button"
            android:layout_height="@dimen/menu_button"
            android:id="@+id/button5"
            android:scaleType="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/button_key_white"/>

        <ImageButton
            android:layout_width="@dimen/menu_button"
            android:layout_height="@dimen/menu_button"
            android:scaleType="center"
            android:id="@+id/button4"
            android:src="@drawable/button_music_lib_white"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle_button"/>

        <ImageButton
            android:layout_width="@dimen/menu_button"
            android:layout_height="@dimen/menu_button"
            android:text="P"
            android:scaleType="center"
            android:src="@drawable/button_pay_arrow_white"
            android:id="@+id/play"
            android:background="@drawable/circle_button"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:visibility="invisible">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton4"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/button_setting_white"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButton5"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/button_info_white"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>
