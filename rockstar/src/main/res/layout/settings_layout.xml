<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_3"
        android:scaleType="centerCrop"
        android:alpha="1"
        android:id="@+id/imageView">
    </ImageView>

    <!-- **********************************************************  -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/panel_1"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView0"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/gray"
            android:text="@string/settings_label"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/help_button_bar"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:layout_below="@+id/textViewCenter"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="invisible"/>

        <com.onquantum.rockstar.common.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/slideSwitcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="glissando"
            android:textStyle="bold|italic"
            android:id="@+id/textView7"
            android:layout_toStartOf="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="right"
            android:alpha="0.6"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <!-- **********************************************************  -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout6"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/relativeLayout2"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/textView2"
                android:textColor="#93c9f6"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/plus"
                android:layout_toEndOf="@+id/minus"
                android:layout_toLeftOf="@+id/plus"
                android:layout_alignTop="@+id/minus"
                android:layout_alignBottom="@+id/minus" />

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/plus"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="+"
                android:background="@drawable/circle_button"
                android:alpha="0.9"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textColor="#444444"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/minus"
                android:background="@drawable/circle_button"
                android:alpha="0.9"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="channels"
            android:id="@+id/textView13"
            android:gravity="right"
            android:alpha="0.6"
            android:textStyle="bold|italic"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <!-- **********************************************************  -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:id="@+id/relativeLayout4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="30sp"
                android:id="@+id/textView5"
                android:textColor="#93c9f6"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/plusFret"
                android:layout_toEndOf="@+id/minusFret"
                android:layout_toRightOf="@+id/minusFret"
                android:layout_toLeftOf="@+id/plusFret"
                android:layout_alignBottom="@+id/minusFret"
                android:layout_alignTop="@+id/minusFret" />

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textSize="30sp"
                android:id="@+id/plusFret"
                android:textColor="#444444"
                android:textStyle="bold"
                android:background="@drawable/circle_button"
                android:alpha="0.9"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="+"
                />

            <Button
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:textColor="#444444"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/minusFret"
                android:text="-"
                android:background="@drawable/circle_button"
                android:alpha="0.9"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="frets"
            android:id="@+id/textView12"
            android:gravity="right"
            android:alpha="0.6"
            android:textStyle="bold|italic"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/textView6" />

    </RelativeLayout>




    <!-- **********************************************************  -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/startButton"
        android:background="@drawable/button_action"
        android:textColor="@color/dark_gray"
        android:alpha="0.9"
        android:textStyle="normal|bold|italic|"
        android:layout_marginBottom="24dp"
        android:height="40dp"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textViewCenter"
        android:layout_toEndOf="@+id/textViewCenter"
        android:layout_alignRight="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/relativeLayout3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="|"
        android:id="@+id/textViewCenter"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible">

        <com.onquantum.rockstar.common.CounterView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="frets"
            android:gravity="center"
            android:alpha="0.6"
            android:textStyle="bold|italic"
            android:id="@+id/textView10"
            android:layout_toStartOf="@+id/textView9"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/relativeLayout6">

        <com.onquantum.rockstar.common.SwitchButton
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:id="@+id/slideSwitcher1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="."
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="distortion"
            android:gravity="right"
            android:alpha="0.6"
            android:textStyle="bold|italic"
            android:id="@+id/textView11"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</RelativeLayout>