<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffb8c7ff"/>
            <padding android:left="20dip"
                android:right="20dip"
                android:top="7dip"
                android:bottom="7dip"/>
            <corners
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffa6a4a5"/>
            <padding android:left="20dip"
                android:right="20dip"
                android:top="7dip"
                android:bottom="7dip"/>
            <corners
                android:bottomRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"/>
        </shape>
    </item>
</selector>