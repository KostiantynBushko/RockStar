<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/green_button"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_home_white_36dp"/>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/green_button"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_home_white_36dp"/>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center" android:src="@drawable/ic_home_black_36dp"/>
            </item>
        </layer-list>
    </item>

</selector>